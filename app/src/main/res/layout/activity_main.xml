<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_test"
    android:background="@color/mainBg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/container_top"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="40dp"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_marginBottom="20dp"
            android:orientation="vertical"
            tools:ignore="MissingConstraints">

            <!-- Başlık ve Kamera -->
            <LinearLayout
                android:id="@+id/container_title"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="10"
                tools:ignore="MissingConstraints">

                <!-- Başlık -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/title_style"
                    android:padding="40dp">

                    <TextView
                        android:id="@+id/txt_title"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/circular_bold"
                        android:text="BİLGİ ÇAĞI KİTAP KIRTASİYE MALZEMELERİ LTD. ŞTİ."
                        android:textAlignment="viewStart"
                        android:textColor="@color/white"
                        android:textSize="30sp" />

                </LinearLayout>

                <!-- Kamera ve Geri Dön -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="30dp"
                    android:layout_marginBottom="60dp"
                    android:layout_weight="2"
                    android:background="@android:color/transparent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/container_preview"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <androidx.camera.view.PreviewView
                            android:id="@+id/previewView"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            tools:ignore="NestedWeights" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:fontFamily="@font/font_light"
                            android:text="Barkodu burada görebilirsiniz"
                            android:textAlignment="center"
                            android:textColor="@color/Red" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/container_return"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:background="@drawable/touch"
                            android:scaleType="fitXY" />

                        <Button
                            android:id="@+id/btn_seePrice"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/bt_radius"
                            android:text="FİYAT GÖR"
                            android:visibility="visible" />
                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- Detaylar -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/container_detail"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="-40dp"
                android:layout_weight="8"
                android:background="@drawable/detail_style"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@id/container_title"
                tools:ignore="MissingConstraints">

                <LinearLayout
                    android:padding="20dp"
                    android:id="@+id/detail_left"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="NestedWeights">


                    <LinearLayout

                        android:padding="0dp"
                        android:layout_margin="0dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|center_horizontal|center_vertical"
                        android:foregroundGravity="center|center_horizontal|center_vertical"
                        android:gravity="center_vertical|center_horizontal|center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txt_discount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/circular_bold"
                            android:text="30₺"
                            android:textColor="@color/colorPriceLine"
                            android:textSize="25sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txt_price"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/slab"
                                android:text="50"
                                android:textColor="@color/Red"
                                android:textSize="55sp" />

                            <TextView
                                android:id="@+id/txt_moneyUnit"

                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:fontFamily="@font/slab"
                                android:text="₺"
                                android:textColor="@color/Red"
                                android:textSize="35sp" />

                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/txt_dotted"
                    android:layout_width="2dp"
                    android:layout_height="0dp"
                    android:background="@drawable/line_vertical"
                    android:layerType="software"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/detail_left"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txt_productName"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_margin="30dp"
                    android:fontFamily="@font/font_regular"
                    android:text="40 YAPRAK ÇİZGİLİ DEFTER"
                    android:textColor="@color/textColor"
                    android:textSize="25sp"
                    app:layout_constraintBottom_toTopOf="@id/txt_stockCode"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/txt_dotted"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/txt_stockCode"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="30dp"
                    android:fontFamily="@font/light"
                    android:text="SKU: 1238907234"
                    android:textColor="@color/textColor"
                    android:textSize="15sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/txt_dotted" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <!-- Footer -->
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <ImageView
                android:id="@+id/img_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/ece_logo" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/dp_logo"
                android:layout_alignParentRight="true" />

        </RelativeLayout>

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>